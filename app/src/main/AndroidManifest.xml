<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.rahul_zoldyck.MangaWolf" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.app.rahul_zoldyck.MangaWolf.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.rahul_zoldyck.MangaWolf.MangaInfo"
            android:label="@string/title_activity_manga_info" >
        </activity>
        <activity
            android:name="com.app.rahul_zoldyck.MangaWolf.ChapterList"
            android:label="@string/title_activity_chapter_list" >
        </activity>
        <activity
            android:name="com.app.rahul_zoldyck.MangaWolf.MangaPages"
            android:label="@string/title_activity_manga_pages" >
        </activity>

        <service
            android:name="com.app.rahul_zoldyck.MangaWolf.DownloadService"
            android:exported="false" >
        </service>
        <service
            android:name="com.app.rahul_zoldyck.MangaWolf.CleanerService"
            android:exported="false" >
        </service>

        <activity
            android:name="com.app.rahul_zoldyck.MangaWolf.Interneterror"
            android:label="@string/title_activity_interneterror" >
        </activity>
    </application>

</manifest>
